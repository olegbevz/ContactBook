@using ContactBook.Models
@using ContactBook.Repositories
@model IEnumerable<Contact>

@{
    ViewBag.Title = "Записная книжка для контактов";
    Layout = "_Layout.cshtml";
}

<div>
    <ul class="nav nav-pills">
        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Хранение данных: <b class="caret"></b></a>
            <ul id="menu1" class="dropdown-menu">
                <li><a href="@Url.Action("Index", new { dataSourceType = DataSourceType.Memory })">Memory</a></li>
                <li class="divider"></li>
                <li><a href="@Url.Action("Index", new { dataSourceType = DataSourceType.Xml })">XML</a></li>
                <li><a href="@Url.Action("Index", new { dataSourceType = DataSourceType.LinqToXml })">Linq to XML</a></li>
                <li class="divider"></li>
                <li><a href="@Url.Action("Index", new { dataSourceType = DataSourceType.ADO })">ADO.NET</a></li>
                <li><a href="@Url.Action("Index", new { dataSourceType = DataSourceType.LinqToSql })">Linq to SQL Classes</a></li>
                <li><a href="@Url.Action("Index", new { dataSourceType = DataSourceType.EntityFramework })">Entity Framework</a></li>
                <li><a href="@Url.Action("Index", new { dataSourceType = DataSourceType.NHibernate })">NHibernate</a></li>
            </ul>
        </li>
    </ul>
    <table class="table table-bordered">
        <tr>
            <th>Полное имя</th>
            <th>Адрес</th>
            <th>Телефон</th>
            <th>Действия</th>
        </tr>
        <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                    <td>@contact.Name</td>
                    <td>@contact.Address</td>
                    <td>@contact.Phone</td>
                    <td>
                        <button class="btn btn-small" onclick="onEditContactButtonClick('@Url.Action("EditContact", new { contact.Id })')">
                            <i class="icon-pencil" title="Редактировать"></i>
                        </button>
                        <button class="btn btn-small" onclick="onRemoveContactButtonClick('@Url.Action("RemoveContact", new { contact.Id })')">
                            <i class="icon-trash" title="Удалить"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button class="btn btn-info" onclick="onCreateContactButtonClick('@Url.Action("CreateContact")')">
        <i class="icon-white icon-plus"></i> Добавить контакт
    </button>
    
    <div class="modal" id="ModalDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" hidden="false">
  
</div>

    <script type="text/javascript" src="../../Scripts/event-handlers.js">
        
    </script>
</div>
